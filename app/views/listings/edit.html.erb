<!-- Validation failure messages -->

<% if @listing.errors.any? %>
  <% @listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Listing #<%= @listing.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_listing/<%= @listing.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for category_id -->
          <div class="form-group">
            <label for="category_id" class="col-sm-2 control-label">
              Category
            </label>
            <div class="col-sm-10">
              <!--<input type="text" id="category_id" name="category_id" placeholder="Category" class="form-control" value="<%= @listing.category_id %>">-->

  <%= select_tag(:category_id, options_from_collection_for_select(Category.all, :id, :category, @listing.category_id), :class => "form-control") %>


            </div>
          </div>

          <!-- Label and input for listing_id -->
          <!--<div class="form-group">
            <label for="listing_id" class="col-sm-2 control-label">
              Listing Name
            </label>
            <div class="col-sm-10">
            <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @listing.listing_id %>">
              <input type="text" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @listing.listing_id %>">
            </div>
          </div>-->

          <!-- Label and input for image -->
          <div class="form-group">
            <label for="image" class="col-sm-2 control-label">
              Image URL
            </label>
            <div class="col-sm-10">
              <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @listing.image %>">
            </div>
          </div>


          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
             User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @listing.user_id %>" >
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @listing.description %></textarea>
            </div>
          </div>

          <!-- Label and input for available -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="available">
                  <input type="checkbox" id="available" name="available" value="1" <%= "checked" if @listing.available %>>
                  Available Now
                </label>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Listing
              </button>
              or
              <a href="/listings/<%= @listing.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
